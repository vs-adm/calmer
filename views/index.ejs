<!DOCTYPE html>
<html>
<head>
    <link href="https://fonts.googleapis.com/css2?family=Merriweather:wght@400;700&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Merriweather', serif;
            background-color: #f0f0f0;
            color: #333;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100vh;
            margin: 0;
            text-align: center;
        }

        #playButton {
            border: none;
            background-color: #4CAF50; /* A soothing green */
            color: white;
            padding: 20px;
            border-radius: 50%;
            font-size: 20px;
            cursor: pointer;
            outline: none;
            transition: background-color 0.3s;
        }

        #playButton:hover {
            background-color: #367B37;
        }

        #message {
            font-size: 24pt;
            margin-bottom: 20px;
            max-width: 600px;
            line-height: 1.8em;
        }

        @keyframes fadeOut {
            from { opacity: 1; }
            to { opacity: 0; }
        }

        @keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }

        .fade-out {
            animation: fadeOut 0.5s forwards; /* 'forwards' makes the element stay in the final state of the animation */
        }

        .fade-in {
            animation: fadeIn 0.5s forwards;
        }
    </style>
</head>
<body>
    <audio id="musicPlayer" src="<%= soundUrl %>" controls="controls" style="display:none;"></audio>
    <audio id="speechPlayer" controls="controls" style="display:none;"></audio>

    <p id="message">You are one click away</p>
    <button id="playButton" onclick="startMusic(); synthesizeSpeech()">â–¶</button>

    <script>
        const message = document.getElementById('message');
        const playButton = document.getElementById('playButton');
        const musicPlayer = document.getElementById('musicPlayer');
        const audioPlayer = document.getElementById('speechPlayer');

        audioPlayer.addEventListener('ended', () => {
            synthesizeSpeech();
        });

        function startMusic() {
            playButton.classList.add('fade-out');
            musicPlayer.play();
        }

        function synthesizeSpeech() {
            message.classList.remove('fade-in');
            message.classList.add('fade-out');

            fetch('/chat')
            .then(response => response.json())
            .then(data => {
                if(data.message) {
                    audioPlayer.src = '/synthesize';
                    audioPlayer.play();

                    setTimeout(() => {
                        message.innerText = data.message;

                        message.classList.remove('fade-out');
                        message.classList.add('fade-in');
                    }, 500);
                }
            });
        }
    </script>
</body>
</html>
